<script>

/*--Callback--*/

$('#exampleModal').on('shown.bs.modal', function (e) {
     $('#modalPhone').click(function(e){
       var name = $('#inputcall_1').val();
       var phone = $('#inputcall_2').val();
       $('#exampleModal').modal('hide');
       $.ajax({
           type: "POST",
           url: "phpscript/req.php",
           data: {
             name:name,
             phone:phone
           },
           success: function(){
               showAlert();
           }
       });
       e.preventDefault();

         function showAlert() {
           swal({
           title: "Спасибо за обращение!",
           text: "В течении 15 минут с вами свяжется менеджер и ответит на ваши вопросы.",
           icon: "success",
           button: "Обратно на сайт",
             });
           }
     });
   });

   /*--Order--*/

   $('#orderModal').on('shown.bs.modal', function (e) {
        $('#modalOrder').click(function(e){
          var name = $('#order_1').val();
          var phone = $('#order_2').val();
          var email = $('#order_3').val();
          var city = $('#order_4').val();
          var radio = $(".custom-control-input:checked").val();
          var check = $("#order_9:checked").val();
          var question = $('#order_10').val();
          $('#orderModal').modal('hide');
          $.ajax({
              type: "POST",
              url: "phpscript/order.php",
              data: {
                name:name,
                phone:phone,
                email:email,
                city:city,
                radio:radio,
                check:check,
                question:question
              },
              success: function(){
                  showAlert();
              }
          });
          e.preventDefault();

            function showAlert() {
              swal({
              title: "Спасибо за заявку!",
              text: "В течении 15 минут с вами свяжется менеджер и уточнит детали по вашему заказу.",
              icon: "success",
              button: "Обратно на сайт",
                });
              }
        });
      });


</script>




