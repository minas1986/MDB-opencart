<!DOCTYPE html>
<!--[if IE]><![endif]-->
<!--[if IE 8 ]><html dir="{{ direction }}" lang="{{ lang }}" class="ie8"><![endif]-->
<!--[if IE 9 ]><html dir="{{ direction }}" lang="{{ lang }}" class="ie9"><![endif]-->
<!--[if (gt IE 9)|!(IE)]><!-->
<html dir="{{ direction }}" lang="{{ lang }}">
<!--<![endif]-->
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<title>{{ title }}</title>
<base href="{{ base }}" />
{% if description %}
<meta name="description" content="{{ description }}" />
{% endif %}
{% if keywords %}
<meta name="keywords" content="{{ keywords }}" />
{% endif %}
<script src="catalog/view/javascript/jquery/jquery-3.3.1.min.js" type="text/javascript"></script>
<link href="catalog/view/javascript/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen" />
<link href="catalog/view/theme/mdb/stylesheet/mdb.min.css" rel="stylesheet">
<link href="catalog/view/theme/mdb/stylesheet/stylesheet.css" rel="stylesheet">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css">
{% for style in styles %}
<link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}" />
{% endfor %}
{% for script in scripts %}
<script src="{{ script }}" type="text/javascript"></script>
{% endfor %}

<script type="text/javascript" src="catalog/view/javascript/bootstrap/js/popper.min.js"></script>
<script src="catalog/view/javascript/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
<script src="catalog/view/javascript/common.js" type="text/javascript"></script>
{% for link in links %}
<link href="{{ link.href }}" rel="{{ link.rel }}" />
{% endfor %}
{% for analytic in analytics %}
{{ analytic }}
{% endfor %}
</head>
<body>

<div class="container-fluide">{{ currency }}
  {{ language }}
    <nav class="mb-1 navbar navbar-expand-lg navbar-dark default-color">
      <h1 class="text-left font-weight-bold white-text">{{ name }}</h1>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent-4" aria-controls="navbarSupportedContent-4" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span></button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent-4">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item "><a class="nav-link waves-effect waves-light" href="{{ contact }}">{{ telephone }}</a></li>
          <li class="nav-item active"><a class="nav-link waves-effect waves-light" href="#">Доставка и оплата</a></li>
          <li class="nav-item"><a class="nav-link waves-effect waves-light font-weight-bold" href="#">Гарантии</a></li>
          <li class="nav-item"><a class="nav-link waves-effect waves-light font-weight-bold" href="#">Акции магазина</a></li>
          <li class="nav-item"><a class="nav-link waves-effect waves-light font-weight-bold" href="#">Новости и статьи</a></li>
          <li class="nav-item"><a class="nav-link waves-effect waves-light font-weight-bold" href="#">Контакты</a></li>
          <li class="nav-item"><a class="nav-link waves-effect waves-light font-weight-bold" href="#">О нас</a></li>
        </ul>
      </div>
    </nav>
  </div>

 <header class="header">
      <div class="container"> 
          <div class="row">
            <div class="col-3">
              {% if logo %}
              <a href="{{ home }}">
              <img class="rounded mb-0" alt="{{ name }}" title="{{ name }}" src="{{ logo }}" data-holder-rendered="true">
              </a>
            {% else %}
              <h1><a href="{{ home }}">{{ name }}</a></h1>
            {% endif %}
            </div>
          <div class="col-4">
           {{ search }}
            <p class="font-weight-bold">График работы:Пн-Вс с 8.00 до 21.00</p>
            <p class="font-weight-bold"><i id="icon-phone" class="fas fa-phone"></i>{{ telephone }}</p>
          </div>
          <div class="col-3">
            <div class="header-msg pt-2">
              <p class="font-weight-bold mt-4">Мы на связи 24/7<i class="far fa-clock text-warning"></i></p>
              <p class="font-weight-bold">+7(925)724-17-72</p>
              <i id="icon-whatsapp" class="fab fa-whatsapp"></i>
              <i id="icon-viber" class="fab fa-viber"></i>
              <i id="icon-telegram" class="fab fa-telegram"></i>
              <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#basicExampleModal">Обратный звонок</button>
           </div>
          </div>
          <div class="col-2 header-cart mt-5">{{ cart }}</div>
        </div>
    </div>
  </header>
{{ menu }}
